@model List<Hospital>
@section style{
    <style>
        table{
            width: 50%;
            text-align:center;
            margin: auto
        }
        a {
            margin:auto
        }
    </style>
}
<h1>HOSPITALES</h1>
<hr />
<a>@Html.ActionLink("Create", "Create", "Hospital", null, new{@class = "btn btn-danger"})</a>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hospital hospital in Model)
        {
            <tr>
                <td>@hospital.Nombre</td>
                <td>@hospital.Direccion</td>
                <td>@hospital.Telefono</td>
                <td>
                    @Html.ActionLink("Detalles", "Detalles", "Hospital", new {idHospital = hospital.IdHospital}, new {@class = "btn btn-success"})
                    @Html.ActionLink("Edit", "Edit", "Hospital", new {id = hospital.IdHospital}, new {@class = "btn btn-warning"})
                    @Html.ActionLink("Delete", "Delete", "Hospital", new {id = hospital.IdHospital}, new {@class = "btn btn-danger"})
                    </td>
            </tr>            
        }
    </tbody>
</table>

