@model List<Doctor>
@{
    List<string> especialidades = (List<string>)ViewData["ESPECIALIDADES"];
}
@section style{
    <style>
        form {
            width: 40%;
            margin:auto;
            text-align:center
        }
    </style>
}


<h1>Doctores Especialidad</h1>

<form method="post">
    <label class="form-label">Introduzca la especialidad:</label>
    <select class="form-select" name="especialidad">
        @foreach(string espe in especialidades)
            {
                <option>@espe</option>
            }
        </select>
    <button class="btn btn-outline-dark">Buscar doctores</button>
</form>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Apellido</th>
            <th>Salario</th>
            <th>Especialidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Doctor doctor in Model)
        {
            <tr>
                <td>@doctor.IdDoctor</td>
                <td>@doctor.Apellido</td>
                <td>@doctor.Salario</td>
                <td>@doctor.Especialidad</td>
            </tr>
        }
    </tbody>
</table>