
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Marta Quiros">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">
    <title>MVC Core Ado Net</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/starter-template/">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/starter-template.css" rel="stylesheet">
    @RenderSection("style", false)
    <style>
        img{
            width: 75px
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <img src="~/images/batman.png"/>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Plantilla2">Plantilla 2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Hospital" asp-action="Index">Hospitales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Doctor" asp-action="DoctorEspecialidad">Doctores</a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">

        <div class="starter-template">
            <h1>Layout</h1>
            <button class="btn btn-outline-dark" id="botonLayout">Boton en Layout</button>
            <br />
            <p id="mensajeLayout"></p>
            <hr />
            @RenderBody()
            @if(IsSectionDefined("images"))
            {
                @RenderSection("images",false)
            }else
            {
                <img src="~/images/spiderman.png"/>
            }
        </div>

    </main>
    <script src="~/js/jquery-3.7.1.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="~/js/vendor/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    @RenderSection("script", false);
    <script>
        $(document).ready(function(){
            $("#botonLayout").click(function(){
                $("#mensajeLayout").text("--Este es un mensaje en el Layout--")
            })
        })
    </script>
</body>
</html>
