@model List<Empleado>

<h1>Empleados Linq To SQL</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Oficio</th>
            <th>Salario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Empleado empleado in Model)
        {
            <tr>
                <td>@empleado.Apellido</td>
                <td>@empleado.Oficio</td>
                <td>@empleado.Salario</td>
                <td><a asp-controller="Empleado" asp-action="Details" asp-route-id="@empleado.IdEmpleado" class="btn btn-success">Detalles</a></td>
            </tr>
        }
    </tbody>
</table>
