@model List<Departamento>
@section style{
    <style>
        table{
            width: 60%;
            margin:auto;
        }
    </style>
}

<h1>Departamentos</h1>
<hr>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Localidad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Departamento dept in Model)
        {
            <tr>
                <td>@dept.IdDepartamento</td>
                <td>@dept.Nombre</td>
                <td>@dept.Localidad</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Departamento", new { id = dept.IdDepartamento }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "Delete", "Departamento", new{ id = dept.IdDepartamento}, new {@class = "btn btn-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>